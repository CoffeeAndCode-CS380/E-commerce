<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox spacing="10" style="-fx-padding:8; -fx-background-color:white; -fx-border-color:lightgray;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fitHeight="50" fitWidth="50" preserveRatio="true" />
        <VBox spacing="4">
            <children>
                <Label text="{Item Name}" />
                <Label text="{item Price}" />
            <Label text="{Item qty}" />
            </children>
        </VBox>
        <Button text="Remove" />
    </children>
</HBox>
